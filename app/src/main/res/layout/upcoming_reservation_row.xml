<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:nestedScrollingEnabled="true"
    android:background="@drawable/search_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_booking_type"
                    android:layout_width="160dp"
                    android:layout_height="28dp"
                    android:background="@drawable/curve_yellow"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/upcoming_bookings"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textDirection="locale"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/sofia_pro_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rest_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/sofia_pro_semibold"
                    android:gravity="start"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/restaurants_nearby"
                    android:textAlignment="gravity"
                    android:textColor="@color/text_sub_heading"
                    android:textDirection="locale"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_restarnt"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_location_icon_white"
                        android:contentDescription="@string/app_name"
                        app:tint="@color/avail_now_sub_text_color" />

                    <TextView
                        android:id="@+id/tv_rest_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="@string/restaurants_nearby"
                        android:textAlignment="gravity"
                        android:textColor="@color/avail_now_sub_text_color"
                        android:textDirection="locale"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:background="@color/faint_sandybrown_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/noofguest"
                            android:contentDescription="@string/app_name" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_no_guest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="10"
                        android:textAlignment="gravity"
                        android:textColor="@color/sandybrown"
                        android:textDirection="locale"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:background="@color/faint_sandybrown_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/calender_sandy_brown"
                            android:contentDescription="@string/app_name" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bookiong_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text=""
                        android:textAlignment="gravity"
                        android:textColor="@color/sandybrown"
                        android:textDirection="locale"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/notificationdivider"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:translationZ="0dp">

            <ImageView
                android:id="@+id/qr_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>