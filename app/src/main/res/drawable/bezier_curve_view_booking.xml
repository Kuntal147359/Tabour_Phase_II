<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item android:top="20dp">
        <shape>
            <solid android:color="@color/view_booking_bg_color" />
            <corners android:topLeftRadius="30.0dip" />
        </shape>
    </item>

    <item android:top="0dp" android:height="20dp">
        <shape>
            <solid android:color="@color/view_booking_bg_color" />
        </shape>
    </item>

    <item android:top="0dp" android:height="20dp">
        <shape>
            <solid android:color="@color/colorPrimary" />
            <corners android:bottomRightRadius="20.0dip" />
        </shape>
    </item>

</layer-list>
