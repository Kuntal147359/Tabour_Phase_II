    // Circular themes
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    // AppBottomSheetDialog Theme
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounded_background</item>
        <item name="behavior_peekHeight">900dp</item>
    </style>

    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/white</item>
